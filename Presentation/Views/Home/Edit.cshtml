@model Rooms

@{
    ViewData["Title"] = "Chỉnh sửa phòng";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chỉnh sửa phòng</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input asp-for="Id" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Tên phòng</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên phòng" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RoomType" class="form-label fw-bold">Loại phòng</label>
                    <input asp-for="RoomType" class="form-control" placeholder="Nhập loại phòng" />
                    <span asp-validation-for="RoomType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PricePerHour" class="form-label fw-bold">Giá mỗi giờ</label>
                    <input asp-for="PricePerHour" type="number" class="form-control" placeholder="Nhập giá" />
                    <span asp-validation-for="PricePerHour" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Available">Có sẵn</option>
                        <option value="Occupied">Đang sử dụng</option>
                        <option value="Maintenance">Bảo trì</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
